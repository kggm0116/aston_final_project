<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_episode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_text_view_info_header"
        app:layout_constraintBottom_toTopOf="@id/text_view_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_text_view_info"
        app:layout_constraintBottom_toTopOf="@id/text_view_air_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_episode_name"
        tools:text="Code" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_air_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_text_view_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_code"
        tools:text="@string/composite_text_episode_air_date" />

</androidx.constraintlayout.widget.ConstraintLayout>