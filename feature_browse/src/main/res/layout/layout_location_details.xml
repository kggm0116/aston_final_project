<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_location_details_text_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_location_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_location_dimension"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Type" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_location_dimension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_location_type"
        app:layout_constraintBottom_toTopOf="@id/text_view_location_residents"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Dimension" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_location_residents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toTopOf="@id/recycler_location_residents"
        app:layout_constraintStart_toStartOf="@id/guideline_location_details_text_start"
        app:layout_constraintTop_toBottomOf="@id/text_view_location_type"
        tools:text="Residents" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_location_residents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_location_residents" />

</androidx.constraintlayout.widget.ConstraintLayout>