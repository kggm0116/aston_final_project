<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_character"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/baseline_image_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_character_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/text_view_character_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_character"
        android:textSize="@dimen/text_size_large"
        android:text="@string/composite_text_character_species" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_character_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/text_view_character_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_character_species"
        android:textSize="@dimen/text_size_large"
        android:text="@string/composite_text_character_gender" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_character_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/text_view_character_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_character_gender"
        android:textSize="@dimen/text_size_large"
        android:text="@string/composite_text_character_type" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_character_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_character_type"
        android:textSize="@dimen/text_size_large"
        android:text="@string/composite_text_character_status" />

</androidx.constraintlayout.widget.ConstraintLayout>