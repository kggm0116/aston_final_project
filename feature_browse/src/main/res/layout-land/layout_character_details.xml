<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_character"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_character_details_texts"
        tools:src="@drawable/baseline_image_24" />

    <include
        android:id="@+id/layout_character_details_texts"
        layout="@layout/layout_character_details_texts"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        app:layout_constraintStart_toEndOf="@id/image_character"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_character_origin"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_character_details_bottom_text_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_character_details_bottom_text_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_character_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toTopOf="@id/text_view_character_location"
        app:layout_constraintEnd_toStartOf="@id/guideline_character_details_bottom_text_end"
        app:layout_constraintStart_toEndOf="@id/guideline_character_details_bottom_text_start"
        app:layout_constraintTop_toBottomOf="@id/image_character"
        tools:text="@string/text_character_origin" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_character_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toTopOf="@id/text_view_character_episodes"
        app:layout_constraintEnd_toStartOf="@id/guideline_character_details_bottom_text_end"
        app:layout_constraintStart_toEndOf="@id/guideline_character_details_bottom_text_start"
        app:layout_constraintTop_toBottomOf="@id/text_view_character_origin"
        tools:text="@string/text_character_location" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_character_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toTopOf="@id/recycler_character_episodes"
        app:layout_constraintEnd_toStartOf="@id/guideline_character_details_bottom_text_end"
        app:layout_constraintStart_toEndOf="@id/guideline_character_details_bottom_text_start"
        app:layout_constraintTop_toBottomOf="@id/text_view_character_location"
        tools:text="@string/text_character_episodes" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_character_episodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_character_details_bottom_text_end"
        app:layout_constraintStart_toEndOf="@id/guideline_character_details_bottom_text_start"
        app:layout_constraintTop_toBottomOf="@id/text_view_character_episodes" />

</androidx.constraintlayout.widget.ConstraintLayout>