<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <include
        android:id="@+id/layout_pager_footer_loading"
        layout="@layout/layout_pager_footer_loading"
        android:layout_height="@dimen/dimen_pager_footer_loading_height"
        android:layout_width="match_parent" />

    <include
        android:id="@+id/layout_pager_footer_error"
        layout="@layout/layout_pager_footer_error"
        android:layout_height="@dimen/dimen_pager_footer_loading_height"
        android:layout_width="match_parent"/>

</LinearLayout>